<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/tweet_username"
       android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tweet_contents"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:text="Username"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/tweet_contents"
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tweet_date"
        android:layout_marginBottom="338dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="33dp"
        android:layout_marginTop="14dp"
        android:text="Contents" />

    <TextView
        android:id="@+id/tweet_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tweet_username"
        android:layout_below="@+id/tweet_username"
        android:text="Date"
        android:textSize="10dp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tweet_contents"
        android:layout_below="@+id/tweet_username"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:maxHeight="30dp"
        android:maxWidth="30dp"
        
        android:src="@drawable/right_arrow" />

</RelativeLayout>
